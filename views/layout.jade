	style.

		html
			{
				//- overflow-y:hidden;
			}
		.Menu
			{
				background-color:#CCCCCC;
				transition:1s;
			}
		.Menu:hover
			{
				background-color:white;
				transition:1s;
			}
		.Menu ul
		{
			list-style:none;
			margin: 0px;
			padding-bottom:15px;
			padding-top:10px;
			//- margin-bottom:20px;
			padding-left: 10%;
			
		}
		.Menu li
		{
			display:inline;
			margin-right: 45px;
		}
		.Menu a
		{
			text-decoration:none;
			font: 130% "Helvetica Neue","Open Sans",sans-serif;
			color:#BBBBBB;
			position:relative;
			//padding-right:30px;
			padding-bottom:5px;
		}
		#head
			{
				//position:fixed;
				background-color:#ffffff;
				margin-top:24px;
				//- width:100%;
				//margin-bottom:60%;
			}
			.Menu a::before
			{
				display:block;
				position:absolute;
				content:"";
				height:2px;
				width: 5;
				background-color:#808080;
				transition: width .5s ease-in-out, left .5s ease-in-out;
				left:50%;
				bottom:0;
			}

			.Menu a::after
			{
				display:block;
				position:absolute;
				content:"";
				height: 2px;
				width: 0;
				background-color: #808080;
				transition: width .5s ease-in-out;
				left: 50%;
				bottom: 0;
			}
		.Menu a:visited
		{
			color:#808080;
		}

		.Menu a:hover
			{
				color:#808080;
			}
		.Menu a:hover::before
			{
				width:50%;
				left:0;
				
			}
		.Menu a:hover::after
		{
			width:50%;
		}
		/*Modal Windows*/
		
		

